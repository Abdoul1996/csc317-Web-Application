<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="/public/css/form.css">
    <script defer type="text/javascript" href="/public/js/frontend.js" ></script>
    <script defer type="text/javascript"  src="/public/js/formValidation.js"></script>
    <script defer type="text/javascript" src="/public/js/frontend.js"></script>
  
    <title>Home Page</title>
  </head>
  <body>
    <div id="main-container">

      {{log this}}
      {{> header}}
      {{#if (emptyObject message)}}
      {{> flashmessage}}
      {{/if}}
      {{> navbar}}
      {{{body}}}
      {{> footer}}
    </div>
    
    {{#if logged}}
    <script>
      document.getElementById('logout-button').addEventListener('click', (e)=>{
          fetch('/users/logout',{method: "POST" })
          .then((response) => response.json())
          .then((res_json) => {
            console.log(res_json);
            location.replace('/')
          })
      })  
    </script> 
    {{/if}}   
  </body>
</html>
