<div class="logging-in">
    <header>
        <h1 class="loginheader">
            Login Form
        </h1>
    </header>

    <form method="POST" action="/users/login" enctype="application/x-www-form-urlencoded">
        <br /><br/>
        <input type="text" class="user" name="username" required placeholder="Username">
        <br/>
        <input type="password" class="pass" name="password" required placeholder="Password">
        
        <br>Do not have an account? <a href="/registration">Register Here</a>

        <br><br/>
        <input type="Reset">
        <input type="Submit">
    </form>
</div>

